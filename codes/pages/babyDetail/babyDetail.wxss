/**index.wxss**/
.itemContent{
  color: black;
  font-size: 35rpx;
}

.userHeaderView {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  width: 100%;
  height: 80rpx;
  background: #f9f9f9;
}

.userHeaderItem {
  width:46%; 
  height:80rpx;
  line-height: 80rpx;
}

.userHeaderImageView {
  width: 50rpx;
  height: 50rpx;
  border-radius: 25rpx;
  margin-top: 10rpx;
}

.userPropertyView {
  height: 102rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  background: #f9f9f9;
  margin-top: -10rpx;
  border-bottom: 1rpx solid #efefef;
}

.userPropertyItem {
  width: 33%;
  height: 102rpx;
}

.userPropertyItemSubView {
  width: 100%;
  height: 50%;
  text-align: center;
  line-height: 30rpx;
}

.userImagesShowView {
  width:95%; 
  height:450rpx; 

}

.userImagesShowView {
  width:95%; 
  height:450rpx; 
  margin:20rpx auto 0 auto;
}

.iWantInBtnView {
  width: 95%;
  height: 80rpx;
  text-align: center;
  margin: 30rpx auto 0 auto;
  overflow: hidden;
  background: #ff4238;
  line-height: 80rpx;
  border-radius: 15rpx;
  font-weight: lighter;
  color: white;
  font-size: 32rpx;
}

.listShowView {
  width: 100%;
  background: #f9f9f9;
  border-bottom: 1rpx solid #efefef;
}

.listShowViewCell {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}

.listLookMoreview {
  height: 150rpx;
  text-align: center;
  line-height: 150rpx;
  border-bottom: 0rpx;
}


.bottomView {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  border-top: 1px solid #DDD;
  background: white;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}

.bottomView .bottomViewItem {
  width: 30%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}

.bottomView .bottomMiddleHeaderView {
  width:140rpx; 
  height:140rpx; 
  margin:-50rpx auto 0 auto; 
  background:#b830f1; 
  border-radius: 70rpx;
  border: 10rpx solid #8607bb;
  box-sizing: border-box;   /**border-box：内边框    content-box：外边框**/
}
